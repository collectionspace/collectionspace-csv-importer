{
  "version": "0.2.0",
  "configurations": [
    {
      "cwd": "${workspaceRoot}",
      "name": "Minitest - Run at cursor position",
      "type": "Ruby",
      "request": "launch",
      "program": "${workspaceRoot}/bin/rails",
      "args": [
        "test",
        "${file}:${lineNumber}"
      ]
    },
    {
      "cwd": "${workspaceRoot}",
      "name": "Debug Attach",
      "type": "Ruby",
      "request": "attach",
      "remoteWorkspaceRoot": "${workspaceRoot}",
      "remoteHost": "0.0.0.0",
      "remotePort": "1234"
    }
  ]
}
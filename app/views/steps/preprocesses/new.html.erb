<h1 class="title has-text-centered"><%= t('batch.title.step') %></h1>

<%= render partial: 'steps/batch_summary', locals: { batch: @batch } %>
<%= render partial: 'steps/breadcrumb', locals: { batch: @batch, step: :preprocess } %>

<div class="box">
  <%= content_tag :div, class: 'level mb-1' do %>
    <%= content_tag :div, class: 'level-left' do %>
      <h3 class="subtitle has-text-weight-bold is-6 mb-2">
        <%= render partial: 'shared/icon',
            locals: { classes: 'has-text-info', icon: 'pause' }
        %>
        <%= t('batch.step.title.preprocess') %>
      </h3>
    <% end %>
    <%= content_tag :div, class: 'level-right' do %>
      <div class="field is-horizontal has-addons">
        <p class="control">
          <button class="button is-small is-outlined">
            <span class="icon is-small">
              <i class="fa fa-play"></i>
            </span>
            <span>Start</span>
          </button>
        </p>
        <p class="control">
          <button class="button is-small is-outlined">
            <span class="icon is-small">
              <i class="fa fa-stop"></i>
            </span>
            <span>Cancel</span>
          </button>
        </p>
        <p class="control">
          <button class="button is-small is-outlined">
            <span class="icon is-small">
              <i class="fa fa-undo"></i>
            </span>
            <span>Reset</span>
          </button>
        </p>
      </div>
    <% end %>
  <% end %>
  <hr class="mt-2 mb-2"/>
  <div class="columns">
    <div class="column">
      <div class="content"><p>Get ready!</p></div>
    </div>
  </div>
  <hr/>
  <%= render partial: 'steps/navigation', locals: { batch: @batch} %>
</div>

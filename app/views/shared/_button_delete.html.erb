<%= content_tag :span, class: 'tag is-danger' do %>
  <%= local_assigns[:text] ? text : t('action.delete') %>
<% end %>
<%= link_to record,
    method: :delete,
    disabled: !manage?(record),
    data: { confirm: t('action.confirm_delete') },
    class: 'destroy tag' do %>
  <%= fa_icon "times" %>
<% end %>

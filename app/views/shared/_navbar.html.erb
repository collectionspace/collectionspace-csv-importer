<nav id="navbar" class="mb-4" role="navigation" aria-label="main navigation">
  <div class="navbar-menu">
    <div class="navbar-start">
      <%= link_to root_path, class: 'navbar-item' do %>
        <%= fa_icon "home", class: 'mr-2' %>
        <%= t('navigation.home') %>
      <% end %>
      <% if admin? %>
        <%= link_to groups_path, class: 'navbar-item' do %>
          <%= fa_icon "sitemap", class: 'mr-2' %>
          <%= t('navigation.groups') %>
        <% end %>
      <% end %>
      <% if admin? %>
        <%= link_to mappers_path, class: 'navbar-item' do %>
          <%= fa_icon "map", class: 'mr-2' %>
          <%= t('navigation.mappers') %>
        <% end %>
      <% end %>
      <%= link_to users_path, class: 'navbar-item' do %>
        <%= fa_icon "users", class: 'mr-2' %>
        <%= t('navigation.users') %>
      <% end %>
    </div>

    <div class="navbar-end">
      <% if impersonating_user? %>
        <%= link_to stop_impersonating_users_path, method: :post, class: 'navbar-item' do %>
          <%= fa_icon "exchange", class: 'mr-2' %>
          <%= true_user.email %>
        <% end %>
      <% end %>
      <%= link_to edit_user_path(current_user), method: :get, class: 'navbar-item' do %>
        <%= fa_icon "user-circle", class: 'mr-2' %>
        <%= current_user.email %>
      <% end %>
      <%= link_to '#', method: :get, class: 'navbar-item' do %>
        <%= fa_icon "inbox", class: 'mr-2' %>
        <%= 0 %>
      <% end %>
      <%= link_to destroy_user_session_path, method: :delete, class: 'navbar-item' do %>
        <%= fa_icon "sign-out", class: 'mr-2' %>
        <%= t('navigation.logout') %>
      <% end %>
    </div>
  </div>

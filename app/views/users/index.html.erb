<h1 class="title has-text-centered"><%= t('user.title.index') %></h1>

<%= content_tag :div, class: 'tags has-addons' do %>
  <%= render partial: 'shared/button_refresh',
    locals: { classes: 'tag is-primary', reflex: 'click->Application#reload' }
  %>
<% end %>

<table class="table is-fullwidth is-hoverable">
  <thead>
    <tr>
      <th><%= t 'user.email' %></th>
      <th><%= t 'user.group' %></th>
      <th><%= t 'user.role' %></th>
      <th><%= t 'user.enabled' %></th>
      <% if admin? %>
        <th colspan="1"></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <%= render partial: 'row', collection: @users, as: :user %>
  </tbody>
</table>

<div class="columns">
  <div class="column">
    <h2 class="subtitle">Details</h2>
    <%= form_with(model: user, local: true) do |form| %>
      <div class="field">
        <%= form.label t('user.email'), class: 'label' %>
        <%= content_tag :div, class: 'control has-icons-left' do %>
          <%= form.email_field :email, disabled: true, class: 'input' %>
          <%= render partial: 'shared/icon',
              locals: { classes: 'is-small is-left', icon: 'envelope' }
          %>
        <% end %>
      </div>

      <div class="field">
        <%= form.label t('user.password'), class: 'label' %>
        <%= content_tag :div, class: 'control has-icons-left' do %>
          <%= form.password_field :password, :autocomplete => "off",
              disabled: !current_user.is?(user), class: 'input' %>
          <%= render partial: 'shared/icon',
              locals: { classes: 'is-small is-left', icon: 'key' }
          %>
        <% end %>
      </div>

      <div class="field">
        <%= form.label t('user.password_confirmation'), class: 'label' %>
        <%= content_tag :div, class: 'control has-icons-left' do %>
          <%= form.password_field :password_confirmation,
              disabled: !current_user.is?(user), class: 'input' %>
          <%= render partial: 'shared/icon',
              locals: { classes: 'is-small is-left', icon: 'key' }
          %>
        <% end %>
      </div>

      <div class="field">
        <%= form.label t('user.enabled'), class: 'checkbox' do %>
          <%= content_tag :span, class: 'mr-1' do t('user.enabled') ; end %>
          <%= form.check_box :enabled, disabled: current_user.is?(user) %>
          <% if user.group.disabled? %>
            <%= content_tag :span, class: 'has-text-danger is-italic ml-1' do %>
              (<%= t('group.inactive') %>)
            <% end %>
          <% end %>
        <% end %>
      </div>

      <div class="field">
        <%= form.label t('user.group'), class: 'label' %>
        <div class="select">
          <%= form.collection_select :group_id, Group.group_options(current_user), :id, :name, {},
              disabled: !can_edit_user_group?(user) %>
        </div>
      </div>

      <div class="field">
        <%= form.label t('user.role'), class: 'label' %>
        <div class="select">
          <%= form.collection_select :role_id, Role.role_options(current_user), :id, :name, {},
              disabled: current_user.is?(user) %>
        </div>
      </div>

      <div class="field is-grouped mt-5">
        <div class="control"> 
          <%= form.submit t('action.submit'), class: 'button is-link' %>
        </div>
        <div class="control">
          <% if impersonating_user? %>
            <%= link_to t('action.cancel'), root_path, class: 'button is-info' %>
          <% else %>
            <%= link_to t('action.cancel'), :back, class: 'button is-info' %>
          <% end %>
        </div>
        <% if !current_user.is?(user) && current_user.manage?(user) %>
        <div class="control"> 
          <%=
            link_to t('navigation.become'), impersonate_user_path(user),
            method: :post, class: 'button is-primary'
          %>
        </div>
        <% end %>
      </div>
    <% end %>
  </div>
  <div class="column">
    <h2 class="subtitle">Connections</h2>
  </div>
</div>

<tr id="<%= dom_id(user) %>" data-user-id="<%= user.id %>">
  <td>
    <% if manage?(user) && !user.superuser? %>
      <%= link_to edit_user_path(user) do %>
        <%= render partial: 'user', locals: { icon: 'pencil', user: user } %>
      <% end %>
    <% else %>
      <%= render partial: 'user', locals: { icon: 'user', user: user } %>
    <% end %>
  </td>
  <td><%= user.group.name %></td>
  <td><%= user.role.name %></td>
  <td>
    <%= render partial: 'shared/update_status', locals: { type: 'user', this: user, opts: { id: user.email } } %>
  </td>
  <td><%= user.connections.size %></td>
  <% if admin? %>
    <td>
      <%= content_tag :div, class: 'tags has-addons is-outline' do %>
        <%= render partial: 'shared/button_delete', locals: { record: user } %>
      <% end %>
    </td>
  <% end %>
</tr>

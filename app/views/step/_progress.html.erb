<tr id="progress_<%= dom_id(step) %>">
  <td><%= step.started_at || waiting_to_start_html.html_safe %></td>
  <td><%= step.started_at ? step.current_runtime : '0' %> seconds</td>
  <td>
    <!-- TODO: step.batch.num_rows -->
    <progress
      class="progress is-<%= step.done? ? 'success' : status_color(step.batch.reload.current_status) %>"
      value="<%= step.step_num_row %>"
      max="<%= 10 %>">
    </progress>
  </td>
  <td><%= step.percentage_complete? %></td>
  <td><%= step.step_errors %></td>
  <td><%= step.step_warnings %></td>
  <td></td>
</tr>

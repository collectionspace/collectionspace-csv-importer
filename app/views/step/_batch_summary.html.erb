<h1 class="title has-text-centered"><%= t('batch.title.step') %></h1>

<div class="box">
  <%= content_tag :div, class: 'level mb-1' do %>
    <%= content_tag :div, class: 'level-left' do %>
      <h3 class="subtitle has-text-weight-bold is-6 mb-2">
        <%= render partial: 'shared/icon',
            locals: { classes: 'has-text-success', icon: 'thumbs-up' }
        %>
        <%= t 'batch.summary' %>
        <%= fa_icon 'chevron-circle-up', class: 'ml-1' %>
      </h3>
    <% end %>
    <%= content_tag :div, class: 'level-right' do %>
      <%= content_tag :div, class: 'tags has-addons mb-2' do %>
        <%= render partial: 'shared/button_return', locals: { path: batches_path } %>
        <%= render partial: 'shared/button_delete', locals: { record: batch } %>
      <% end %>
    <% end %>
  <% end %>
  <hr class="mt-2 mb-4"/>
  <div id="batch_info" class="columns">
    <div class="column">
      <dl>
        <dt class="is-italic"><%= t 'batch.name' %></dt>
        <dd><%= batch.name %></dd>
      </dl>
    </div>
    <div class="column">
      <dl>
        <dt class="is-italic">
          <%= fa_icon "user-plus", class: 'mr-1' %>
          <%= t 'batch.group' %>
        </dt>
        <dd><%= batch.group.name %></dd>
      </dl>
    </div>
    <div class="column">
      <dl>
        <dt class="is-italic">
          <%= fa_icon "file", class: 'mr-1' %>
          <%= t 'batch.file' %>
        </dt>
        <dd><%= batch.spreadsheet.filename %></dd>
      </dl>
    </div>
    <div class="column">
      <dl>
        <dt class="is-italic">
          <%= fa_icon "user-circle", class: 'mr-1' %>
          <%= t 'batch.created_by' %>
        </dt>
        <dd><%= batch.user.email %></dd>
      </dl>
    </div>
    <div class="column">
      <dl>
        <dt class="is-italic">
          <%= fa_icon "calendar", class: 'mr-1' %>
          <%= t 'batch.created_at' %>
        </dt>
        <dd><%= batch.created_at %></dd>
      </dl>
    </div>
  </div>
</div>